# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = false

# Global settings
[*]
end_of_line = lf
charset = utf-8
max_line_length = 100
trim_trailing_whitespace = false
insert_final_newline = true

# JavaScript, TypeScript, and ReactJS settings
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
quote_type = double
